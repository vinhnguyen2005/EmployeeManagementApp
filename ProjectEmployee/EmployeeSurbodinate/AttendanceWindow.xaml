<Window x:Class="ProjectEmployee.EmployeeSurbodinate.AttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Attendance Check-in" Height="953" Width="1100"
        WindowStartupLocation="CenterOwner" 
        Background="#764ba2"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3730A3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#312E81"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" 
                                    ShadowDepth="4" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Overlay -->
        <Rectangle Fill="White" Opacity="0.95"/>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,30">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="🎯" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Face Recognition Check-in" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="#1E293B" 
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Secure • Fast • Accurate" 
                             FontSize="14" 
                             Foreground="#64748B" 
                             HorizontalAlignment="Center" 
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Camera Section -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="📷 Live Camera" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="#374151" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,15"/>

                        <Border Background="#000000" 
                              CornerRadius="16" 
                              Padding="8"
                              Height="320">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.2" 
                                                ShadowDepth="2" BlurRadius="8"/>
                            </Border.Effect>
                            <Image x:Name="CameraImage" 
                                 Stretch="UniformToFill" 
                                 ClipToBounds="True"/>
                        </Border>

                        <TextBlock Text="Position your face in the frame" 
                                 FontSize="12" 
                                 Foreground="#6B7280" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Separator -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                        <Ellipse Width="60" Height="60" 
                               Fill="#F3F4F6" 
                               Stroke="#E5E7EB" 
                               StrokeThickness="2"/>
                        <TextBlock Text="VS" 
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="#6B7280"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="0,-45,0,0"/>
                    </StackPanel>

                    <!-- Profile Picture Section -->
                    <StackPanel Grid.Column="2" Margin="20,0,0,0">
                        <TextBlock Text="👤 Your Profile" 
                                 FontSize="18" 
                                 FontWeight="SemiBold" 
                                 Foreground="#374151" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,15"/>

                        <Border Background="#F8FAFC" 
                              CornerRadius="16" 
                              Padding="30" 
                              Height="320">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" 
                                                ShadowDepth="2" BlurRadius="8"/>
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border CornerRadius="80" 
                                      Width="160" 
                                      Height="160" 
                                      BorderBrush="#E5E7EB" 
                                      BorderThickness="3">
                                    <Ellipse Width="154" Height="154">
                                        <Ellipse.Fill>
                                            <ImageBrush x:Name="ProfileImageBrush" 
                                                      Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Border>
                                <TextBlock Text="Your Profile Picture" 
                                         FontSize="14" 
                                         Foreground="#6B7280"
                                         HorizontalAlignment="Center"
                                         Margin="0,15,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Bottom Action Section -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,30,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <Button x:Name="btnCheckIn" 
                          Content="🚀 Check In Now" 
                          Width="250" 
                          Height="55" 
                          FontSize="18" 
                          Style="{StaticResource ModernButton}"
                          Click="CheckIn_Click"/>

                    <Border Background="#F1F5F9" 
                          CornerRadius="8" 
                          Padding="15,10" 
                          Margin="0,20,0,0">
                        <TextBlock x:Name="txtStatus" 
                                 Text="Please look at the camera and press 'Check In'" 
                                 HorizontalAlignment="Center" 
                                 Foreground="#475569"
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 MaxWidth="400"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>