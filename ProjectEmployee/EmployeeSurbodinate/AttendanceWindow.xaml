<Window x:Class="ProjectEmployee.EmployeeSurbodinate.AttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Attendance Check-in" Height="600" Width="900"
        WindowStartupLocation="CenterOwner" Background="#F1F5F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Face Recognition Check-in" FontSize="24" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="Black" CornerRadius="12" Margin="0,0,15,0" Padding="5">
                <Image x:Name="CameraImage" Stretch="UniformToFill"/>
            </Border>

            <!-- Separator -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="vs" FontSize="24" FontWeight="Bold" Margin="15,0"/>
            </StackPanel>

            <!-- Profile Picture -->
            <Border Grid.Column="2" Background="White" CornerRadius="12" Margin="15,0,0,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Ellipse Width="150" Height="150">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="ProfileImageBrush" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Your Profile Picture" FontSize="16" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="btnCheckIn" Content="Check In" Width="200" Height="50" FontSize="18" FontWeight="Bold" Click="CheckIn_Click"/>
            <TextBlock x:Name="txtStatus" Text="Please look at the camera and press 'Check In'" Margin="0,15,0,0" HorizontalAlignment="Center" Foreground="#475569"/>
        </StackPanel>
    </Grid>
</Window>
